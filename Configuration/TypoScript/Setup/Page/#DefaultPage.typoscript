# Temporary default page configuration
temp {
    UnityDefaultPage = PAGE
    UnityDefaultPage {
        config {
            disableAllHeaderCode = 1
            metaCharset = UTF-8
            absRefPrefix = %BASE_URL%/
            tx_realurl_enable = 1
        }

        10 = FLUIDTEMPLATE
        10 {
            templateName = TEXT
            templateName {
                stdWrap {
                    cObject = TEXT
                    cObject {
                        data = levelfield:-2, backend_layout_next_level, slide

                        override {
                            field = backend_layout
                        }

                        split {
                            token = pagets__
                            1 {
                                current = 1
                                wrap = |
                            }
                        }
                    }

                    ifEmpty = OneColumn
                }
            }

            templateRootPaths {
                10 = {$plugin.tx_wvt3unity.paths.templates.pageRenderer}
                20 = {$plugin.tx_wvt3unity.paths.templates.unity}
                30 = {$plugin.tx_wvt3unity.paths.templates}
            }

            partialRootPaths {
                10 = {$plugin.tx_wvt3unity.paths.partials}
            }

            layoutRootPaths {
                10 = {$plugin.tx_wvt3unity.paths.layouts}
            }

            // Set variables in templates and render content
            // Variables in template
            variables {
                content < styles.content.get
                content {
                    select {
                        where = colPos = 1
                    }
                }

                sidebarLeft < styles.content.get
                sidebarLeft {
                    select {
                        where = colPos = 2
                    }
                }

                sidebarRight < styles.content.get
                sidebarRight {
                    select {
                        where = colPos = 3
                    }
                }
            }
        }

        meta {
            description {
                field = description
            }

            author {
                field = author
            }

            keywords {
                field = keywords
            }
        }
    }
}
